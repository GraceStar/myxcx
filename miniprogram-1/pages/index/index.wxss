/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.timer_container {
  display: flex;
  height: 100vh;
  flex-direction: column;
  background-color: white;
}

.timer_main {
  position: relative;
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: linear-gradient(#217dc9,#feffff);
}

.timer_footer {
  display: flex;
  flex: 1;
}
.timer_time_wrap {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150px;
  height: 150px;
}
.timer_inputname {
  position: absolute;
  width: 50%;
  bottom: 40px;
  height: 40px;
  text-align: center;
  border-radius: 10px;
  box-shadow: inset 3px 3px 7px #d2d2d2, inset -5px -5px 5px #ffffff;
  background-color: white;
}
.timer_progress_mask {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  border: 3px solid black;
  opacity: .5;
  border-radius: 50%;
}
.timer_progress {
  position: absolute;
  top: 0;
  width: 75px;
  height: 150px;
  overflow: hidden;
  transition: all .3s;
}
.timer_left {
  left: 0;
}
.timer_right {
  right: 0;
}
.timer_time_value {
  font-size: 40px;
  color: #fff;
  font-weight: lighter;
  transition: font-size .3s;
}
.timer_task_name {
  position: absolute;
  top: -100px;
  font-size: 14px;
  letter-spacing: 5px;
  color: #fff;
}
.timer_circle {
  position: absolute;
  top: 0;
  width: 144px;
  height: 144px;
  /* background-color: red; */
  border: 3px solid transparent;
  border-radius: 50%;
  transition: all .3s;
}
.timer_circle_left {
  left: 0;
  border-left: 3px solid green;
  border-bottom: 3px solid red;
  transform: rotate(0deg);
}
.timer_circle_right {
  right: 0;
  border-right: 3px solid blue;
  border-bottom: 3px solid yellow;
  transform: rotate(-45deg);
}
